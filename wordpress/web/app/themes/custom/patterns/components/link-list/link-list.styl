.link-list
    @extends $componentWithMargin
    --link-background-color white
    --link-background-color-focused charcoal
    --link-text-color inherit
    --link-text-color-focused white
    --link-icon-color inherit
    --link-icon-color-focused white

    &__heading
        @extends $headline2
        margin-bottom 8px
        &--is-hidden
            @extends $invisibleShowFocused

    &__description
        @extends $body
        @extends $richText

    &__topic-heading
        @extends $headline3
        margin-bottom 16px

    &__link
        @extends $bodySmall
        display grid
        grid-template-columns 1fr 20px
        padding 12px 16px
        background var(--link-background-color)
        margin-bottom 2px
        text-decoration none

        &:focus
        &:hover
            background var(--link-background-color-focused)
            color var(--link-text-color-focused)
            & svg path
                fill var(--link-icon-color-focused)




    &__topic-group
        grid-column-gap 16px
        grid-row-gap 32px
        display grid
        grid-template-columns repeat(auto-fit,minmax(282px,1fr))
        margin-top 48px


